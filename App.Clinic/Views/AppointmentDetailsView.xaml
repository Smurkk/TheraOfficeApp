<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Clinic.Views.AppointmentDetailsView"
             Title="AppointmentDetailsView">

    <VerticalStackLayout Padding="10">
        <Label Text="Appointment Details" FontAttributes="Bold" FontSize="Large"/>

        <Label Text="Patient Name:"/>
        <Label Text="{Binding PatientName}"/>

        <Label Text="Insurance Plan Price:"/>
        <Label Text="{Binding InsurancePlanPrice}"/>

        <Label Text="Treatment Name:"/>
        <Label Text="{Binding TreatmentName}"/>

        <Label Text="Treatment Price:"/>
        <Label Text="{Binding TreatmentPrice}"/>

        <Label Text="Total Price without Insurance:"/>
        <Label Text="{Binding TotalPriceWithoutInsurance}"/>

        <Label Text="Total Price with Insurance:"/>
        <Label Text="{Binding TotalPriceWithInsurance}"/>

        <Button Text="Back" Clicked="BackClicked"/>
    </VerticalStackLayout>
</ContentPage>
